<Window x:Class="Client.GameResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="GameResultsWindow" Height="400" Width="300">
    <DockPanel LastChildFill="False">
		<TextBlock DockPanel.Dock="Top" FontSize="24" HorizontalAlignment="Center" Margin="5">Game Results</TextBlock>
		<TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" Name="NotAvailableText">Not available yet...</TextBlock>
		<StackPanel DockPanel.Dock="Top" Name="ResultsPanel" Margin="10" Visibility="Collapsed">
			<StackPanel.Resources>
				<Style TargetType="TextBlock">
					<Setter Property="FontSize" Value="14"></Setter>
				</Style>
			</StackPanel.Resources>
			<TextBlock FontWeight="Bold" Margin="5" HorizontalAlignment="Center">name, correct answers, average time</TextBlock>
		</StackPanel>
		<Button DockPanel.Dock="Bottom" FontSize="16" Width="120" Margin="10" Click="Menu_Click">Back To Menu</Button>
	</DockPanel>
</Window>
