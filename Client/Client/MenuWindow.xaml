<Window x:Class="Client.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MenuWindow" Height="325" Width="300">
	<Viewbox Stretch="Uniform"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MaxWidth="400">
		<StackPanel Width="120">
			<!--Children's Style-->
			<StackPanel.Resources>
				<Style TargetType="Button">
					<Setter Property="Margin" Value="4"/>
				</Style>
			</StackPanel.Resources>

			<TextBlock HorizontalAlignment="Center" FontSize="14" Margin="0,5,0,5">
				<Bold>Main Menu</Bold>
			</TextBlock>
			<Button Click="JoinRoom_Click">Join Room</Button>
			<Button Click="CreateRoom_Click">Create Room</Button>
			<Button Click="UserStats_Click">My Stats</Button>
			<Button Click="HighScores_Click">High Scores</Button>
            <Button Click="ChangePassword_Click">Change Password</Button>
			<Button Margin="5,5,5,15" Click="Logout_Click">Logout</Button>
		</StackPanel>
	</Viewbox>
</Window>
